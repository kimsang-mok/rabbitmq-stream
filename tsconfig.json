{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "application/*": ["application/*"],
      "binding/*": ["binding/*"],
      "connection/*": ["connection/*"],
      "logging/*": ["logging/*"]
    }
  }
}
